<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="title"
            type="String" />

        <variable
            name="viewModel"
            type="ru.tohaman.testempty.ui.learn.LearnDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/appBar"
            layout="@layout/include_app_bar"
            app:title="Информация"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/infoViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/c_db"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/feedbackFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:padding="@dimen/mid_padding"
            app:backgroundTint="@color/colorAccent"
            app:backgroundTintMode="screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_rate_us_white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>