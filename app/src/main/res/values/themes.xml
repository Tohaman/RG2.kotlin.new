<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    возможно добавить переходы для api 21+ https://developer.android.com/guide/topics/ui/look-and-feel/themes -->
    <!-- Base application theme темная -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="contrastColor">@color/c_w</item>
    </style>

    <attr name="contrastColor" format="color"/>

    <!-- Base application theme светлая -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="contrastColor">@color/c_bl</item>
    </style>

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона drawable -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

    <!--Значения для фрагмента настроек программы-->

    <string-array name="themes_title">
        <item>Темная тема</item>
        <item>Светлая тема</item>
        <item>Авто (День/ночь)</item>
    </string-array>

    <string-array name="themes_values">
        <item>AppTheme</item>
        <item>AppThemeLight</item>
        <item>AppThemeDayNight</item>
    </string-array>

</resources>
