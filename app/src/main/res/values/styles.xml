<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона drawable -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/logo</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.Rg2.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/design_default_color_background</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainText">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
        <item name="android:textColorTertiary">@color/textColorTertiaryLight</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeDayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentDark</item>
    </style>


    <!--Значения для фрагмента настроек программы-->

    <string-array name="themes_title">
        <item>Темная тема</item>
        <item>Светлая тема</item>
        <item>Авто (День/ночь)</item>
    </string-array>

    <string-array name="themes_values">
        <item>AppTheme</item>
        <item>AppThemeLight</item>
        <item>AppThemeDayNight</item>
    </string-array>

    <string-array name="text_size_title">
        <item>Маленький (13)</item>
        <item>Нормальный (15)</item>
        <item>Большой (18)</item>
        <item>Очень большой (21)</item>
    </string-array>

    <string-array name="text_size_values">
        <item>13</item>
        <item>15</item>
        <item>18</item>
        <item>21</item>
    </string-array>

</resources>
