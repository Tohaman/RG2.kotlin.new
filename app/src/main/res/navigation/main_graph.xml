<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/main_learn">

    <fragment
        android:id="@+id/main_info"
        android:name="ru.tohaman.testempty.ui.info.InfoFragment"
        android:label="main_info"
        tools:layout="@layout/fragment_info">
    </fragment>

    <fragment
        android:id="@+id/main_learn"
        android:name="ru.tohaman.testempty.ui.learn.LearnFragment"
        android:label="main_learn"
        tools:layout="@layout/fragment_list_view">
    </fragment>

    <fragment
        android:id="@+id/learn_detail"
        android:name="ru.tohaman.testempty.ui.TmpFragment"
        android:label="learn_detail"
        tools:layout="@layout/fragment_tmp" >
        <action
            android:id="@+id/action_tmpFragment_to_listViewFragment"
            app:destination="@id/main_learn"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/main_games"
        android:name="ru.tohaman.testempty.ui.games.GamesFragment"
        android:label="@string/main_games_clicked"
        tools:layout="@layout/fragment_games">
    </fragment>

    <fragment
        android:id="@+id/main_settings"
        android:name="ru.tohaman.testempty.ui.settings.SettingsFragment"
        android:label="@string/main_settings"
        tools:layout="@layout/fragment_settings">
    </fragment>

</navigation>